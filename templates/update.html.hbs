<html>

<head>
    <title>
        Diagram!
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.3/sketchy/bootstrap.min.css">
</head>

<body>
    <div class="container my-5">
        <form class="form-control" enctype="multipart/form-data" method="POST" action="/update">
            <div class="col">
                <h1 class="display-1">{{diagram.0.title}}<a class="btn btn-primary  float-right" href="/">Back</a></h1>
                <hr>
                {{!-- <img class="img-fluid img-thumb" src="{{diagram.0.photo}}" alt=""> --}}
                {{data}}
                <input name="id" class="form-control" hidden value="{{diagram.0.id}}">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="title">Title:<span style="color: red">*</span></label>
                            <input required type="text" value="{{diagram.0.title}}" name="title" id="title"
                                class="form-control">
                        </div>
                        <div class="col">
                            <label for="caption">Caption:</label>
                            <input type="text" value="{{diagram.0.caption}}" name="caption" id="caption"
                                class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="photo">Photo:<span style="color: red">*</span></label>
                            <div class="custom-file">
                                <input type="file" value="{{diagram.0.photo}}" name="photo" class="custom-file-input"
                                    id="photo">
                                <label class="custom-file-label" for="photo">Upload</label>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary btn-block btn-large">Update diagram</button>
                {{#if flash}}
                <div class="alert alert-danger">
                    {{flash}}
                </div>
                {{/if}}
            </div>
        </form>
    </div>

